@model LI.Contracting.EntityDTO.CarrierDTO;
<table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.BusinessId)</th>
            <th> @Html.DisplayNameFor(model => model.BusinessName)</th>
            <th> @Html.DisplayNameFor(model => model.BusinessAddress)</th>
            <th> @Html.DisplayNameFor(model => model.BusinessPhoneNumber)</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>
<script>
    $(document).ready(function () {
        $("#example").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": false,
            "orderMulti": false,
            "autofill": true,
            "pageLength": 10,
            "orderFixed": true,
            "lengthChange": false,
            "ajax": {
                "url": "/Carrier/LoadGrid",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
            }],
            "columns": [
                { "data": "businessId", "name": "businessId", "autoWidth": true },
                { "data": "businessName", "name": "businessName", "autoWidth": true },
                { "data": "businessAddress", "name": "businessAddress", "autoWidth": true },
                { "data": "businessPhoneNumber", "name": "businessPhoneNumber", "autoWidth": true, },
                { "render": function (data, type, row) { return "<a href='javascript:void(0)' onclick=editcarrier('" + row.businessId + "');>Edit</a>"; } },
                { "render": function (data, type, row) { return "<a href='javascript:void(0)'  onclick=deletecarrier('" + row.businessId + "'); >Delete</a>"; } },
            ]

        });
    });
</script>