@model LI.Contracting.EntityDTO.ContractDTO; 
<table id="example" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ContractId)</th>
            <th> @Html.DisplayNameFor(model => model.ContractName)</th>
            
           
        </tr>
    </thead>
</table>
<script>
    $(document).ready(function () {
        $("#example").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": false,
            "orderMulti": false,
            "autofill": true,
            "pageLength": 10,
            "orderFixed": true,
            "lengthChange": false,
            "ajax": {
                "url": "/Contract/LoadGrid",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
            }],
            "columns": [
                { "data": "contractId", "name": "contractId", "autoWidth": true },
                { "data": "contractName", "name": "contractName", "autoWidth": true }
            ]

        });
    });
</script>